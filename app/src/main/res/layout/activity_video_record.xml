<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".VideoRecordActivity">

    <!-- 1. Camera Preview Layers -->
    <androidx.camera.view.PreviewView
        android:id="@+id/viewFinder"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/fullscreenProcessedView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/frozenPreviewImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <!-- 2. Interactive Overlay (Drawing Box) -->
    <com.example.myapplication_hitchock.RectOverlayView
        android:id="@+id/rectOverlayView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- 3. Top Controls (Reset Button) -->
    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="24dp"
        android:text="Reset"
        android:textSize="12sp"
        android:backgroundTint="#FF5252"
        app:cornerRadius="20dp"
        android:drawableStart="@android:drawable/ic_menu_revert"
        android:drawableTint="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 4. Debug Info Overlay -->
    <TextView
        android:id="@+id/debugInfoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ready"
        android:textColor="#00FF00"
        android:textSize="14sp"
        android:fontFamily="monospace"
        android:background="#80000000"
        android:padding="8dp"
        android:layout_marginTop="80dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 5. Bottom Controls -->
    
    <!-- Smoothing Control -->
    <LinearLayout
        android:id="@+id/smoothingControlLayout"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#60000000"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toTopOf="@+id/intervalControlLayout"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/smoothingLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Smooth: 5%"
            android:textColor="#EEEEEE"
            android:textSize="12sp"
            android:layout_marginBottom="4dp"/>

        <SeekBar
            android:id="@+id/smoothingSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="30"
            android:progress="5"
            android:progressTint="#FFFFFF"
            android:thumbTint="#FFFFFF"/>
    </LinearLayout>

    <!-- Interval Control (Bottom Left) -->
    <LinearLayout
        android:id="@+id/intervalControlLayout"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#60000000"
        android:padding="12dp"
        android:layout_marginBottom="32dp"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toTopOf="@+id/video_capture_button"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/intervalLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Track Interval: 4"
            android:textColor="#EEEEEE"
            android:textSize="12sp"
            android:layout_marginBottom="4dp"/>

        <SeekBar
            android:id="@+id/intervalSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="19"
            android:progress="3"
            android:progressTint="#FFFFFF"
            android:thumbTint="#FFFFFF"/>
    </LinearLayout>

    <!-- Record Button (Center Bottom) -->
    <Button
        android:id="@+id/video_capture_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="48dp"
        android:backgroundTint="#FF4444"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:cornerRadius="40dp"
        app:strokeColor="#FFFFFF"
        app:strokeWidth="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Small Window Preview (Bottom Right) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/previewCardView"
        android:layout_width="120dp"
        android:layout_height="160dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="48dp"
        android:layout_marginEnd="24dp">
        
        <ImageView
            android:id="@+id/processedImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:visibility="gone"
            tools:visibility="visible"
            android:background="#222222"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Effect"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:background="#80000000"
            android:padding="4dp"
            android:layout_gravity="top|start" />
            
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>